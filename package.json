{
  "name": "toky",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/{dist,cjs,esm}",
    "build": "tsc --build",
    "watch": "yarn build -w",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn build && yarn lint",
    "test": "lerna run test --stream",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@ts-tools/node": "^2.1.1",
    "@types/node": "12",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.1.5"
  },
  "engines": {
    "node": ">=12"
  },
  "repository": "git@github.com:wixplosives/toky.git",
  "author": "Wix.com",
  "license": "MIT"
}
